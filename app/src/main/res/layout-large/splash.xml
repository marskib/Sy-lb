<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:id="@+id/SplashEkran"
    android:layout_width="640dp"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:tag="large">

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="167dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.19"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/autyzmsoft" />

    <TextView
        android:id="@+id/autyzmsoftpl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="AutyzmSoft.pl"
        android:autoLink="web"
        android:textStyle="bold"
        android:textSize="28sp">
    </TextView>

    <TextView
        android:id="@+id/buforek1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">
    </TextView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:orientation="vertical">

        <CheckBox android:id="@+id/cb_znikacz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:text=" Sylaba znika samodzielnie"
            android:checked="true">
        </CheckBox>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:orientation="horizontal">

            <CheckBox android:id="@+id/cb_nosound"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:text=" Wyłącz głos  ">
            </CheckBox>

            <CheckBox android:id="@+id/cb_tlo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:text=" Zielone tło">
            </CheckBox>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/tekst_opisowy_layout"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/pusty3"
            android:textSize="12sp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">
        </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="  Zmiana zestawu sylab - szybki gest   Palec w Górę   /   Klawisz Menu">
    </TextView>


    <TextView
        android:id="@+id/pusty1"
        android:textSize="2px"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">
    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="  Wielkie/Małe litery - dotknij i przytrzymaj">
    </TextView>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="  Ustawienia - 2-krotne puknięcie">
        </TextView>


        <TextView
            android:id="@+id/pusty2"
            android:textSize="12sp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">
        </TextView>

    <TextView
        android:id="@+id/gwiazdki_info"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:gravity="center_horizontal"
        android:textColor="@android:color/holo_red_dark"
        android:text="  ** - zestawy dostępne w pełnej wersji">
    </TextView>

        <TextView
            android:id="@+id/pusty4"
            android:textSize="12sp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">
        </TextView>


</LinearLayout>
</LinearLayout>